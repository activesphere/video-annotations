{
	"manifest_version": 2,

	"name": "Video Annotation",
	"description": "Allow to add annotation",
	"version": "1.0",

	"browser_action": {
		"default_icon": "icon.png"
	},
	"content_scripts": [
		{
			"matches": ["https://www.youtube.com/*"],
			"js": ["js/lib/jquery-min.js", "js/lib/underscore-min.js", "js/lib/backbone-min.js", "js/lib/mustache-min.js","js/backbone/models.js", "js/backbone/collections.js", "js/backbone/views/annotations-view.js", "js/backbone/views/annotation-view.js", "js/backbone/views/new-annotation-view.js", "js/my_script.js"]
		}
	],
	"permissions": [
		"activeTab",
		"https://ajax.googleapis.com/"
	],
	"web_accessible_resources": ["templates.html"]
}
