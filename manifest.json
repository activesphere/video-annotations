{
  "manifest_version": 2,

  "name": "Video Annotation",
  "description": "Allow to add annotation",
  "version": "1.0",

  "browser_action": {
    "default_icon": "images/icon.png"
  },
  "minimum_chrome_version": "4.7.80",
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "<all_urls>",
    "contextMenus",
    "storage",
    "unlimitedStorage",
    "tabs"
  ],
  "background": {
    "scripts": [
      "builds/event.bundle.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://www.coursera.org/*"
      ],
      "js": [
        "builds/videoDetection.bundle.js"
      ],
      "css": [
        "styles/simplemde.min.css"
      ]
    }
  ],
  "web_accessible_resources": [
    "html/templates.html",
    "html/chrome_oauth_receiver.html",
    "images/edit.png",
    "images/delete.png",
    "images/close.png",
    "bower_components/font-awesome/fonts/*"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
