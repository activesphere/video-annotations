{
  "manifest_version": 2,
  "name": "Annotate videos",
  "description": "Take detailed notes on Youtube & Coursera videos in the form of annotations",
  "version": "0.3.0",
  "browser_action": {
    "default_icon": "images/icon.png"
  },
  "minimum_chrome_version": "4.7.80",
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "<all_urls>",
    "contextMenus",
    "storage",
    "unlimitedStorage",
    "tabs"
  ],
  "background": {
    "scripts": [
      "builds/commons.chunk.js",
      "builds/event.bundle.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://www.coursera.org/*"
      ],
      "js": [
        "builds/commons.chunk.js",
        "builds/videoDetection.bundle.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "html/templates.html",
    "html/chrome_oauth_receiver.html",
    "bower_components/font-awesome/fonts/*"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}